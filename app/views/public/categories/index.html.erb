<h4>カテゴリー一覧</h4>

　<% @categories.each do |category| %>
    <%= link_to category.name, categories_path(category.id) %>
  <% end %>

  <h5>カテゴリー検索</h5>
  <div class="search-form">
    <%= form_with url: search_path, method: :get, local: true do |f| %>
      <%= f.text_field :keyword, value: @keyword %>
      <%= f.submit "検索" %>
    <% end %>
  </div>