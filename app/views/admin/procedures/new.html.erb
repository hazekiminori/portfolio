<%= form_with model: @procedure, local:true, url: admin_procedures_path, method: :post do |f| %>
  <p>
    <%= f.label :title, '手順タイトル' %>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :image, '物品配置' %>
    <%= f.file_field :image %>
  </p>

  <p>
    <%= f.label :item, '必要物品' %>
    <%= f.text_area :item %>
  </p>
  <p>
    <%= f.label :procedure, '手順'%>
    <%= f.text_field :procedure %>
  </p>



  <%= f.submit '作成する' %>
<% end %>

<p>変更件数：<%= @procedure.changes.count %></p>
