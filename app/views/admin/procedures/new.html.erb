<h4>手順新規登録</h4>
<%= form_with model: @procedure , local:true, url: admin_procedures_path, method: :post do |f| %>
  <p>物品配置</p>
  <%= f.file_field :image %>
  <p>必要物品</p>
  <%= f.text_area :item %>
  <p>手順</p>
  <%= f.text_area :procedure %>
<% end %>

<p>変更件数：<%= @procedure.changes.count %></p>
<% @procedure.changes.each do |procedure| %>
  <%= change.user.name %>
  <%= change.created_at.strftime('%Y/%m/%d') %>
<% end %>

